<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaXamarinApp.Views.HomePage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Play" Command="{Binding Play}" Padding="0"/>
            <Button Text="Log In" Command="{Binding LogIn}" Padding="0"/>
            <Button Text="Register" Command="{Binding Register}" Padding="0"/>
            <Button Text="My Questions" Command="{Binding MyQuestions}" Padding="0"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>