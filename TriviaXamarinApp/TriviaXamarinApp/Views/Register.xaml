<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaXamarinApp.Views.Register">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Register Page" HorizontalTextAlignment="Center" FontSize="Large"/>

            <Label Text="Email:"/>
            <Entry x:Name="email" Text="{Binding Email} "/>

            <Label Text="Password:"/>
            <Entry x:Name="password" Text="{Binding Password} "/>

            <Label Text="NickName:"/>
            <Entry x:Name="nickName" Text="{Binding NickName} "/>

            <Button Text="send" Command="{Binding Register}" />
            <Label Text="{Binding Message}" TextColor="{Binding Color}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>